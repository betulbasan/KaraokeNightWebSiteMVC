@using karaoke.Models
@model List<Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Karaoke Night | Events</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="~/web/css/style.css" type="text/css">
</head>
<body>
    <div id="header">
        <a href="/Default/Index/" id="logo"><img src="~/web/images/logo.png" alt=""></a>

    </div>
    <div class="body">
        <ul class="navigation">
            <li> <a href="/Menu/Index/" id="link1">Menu</a> <a href="/Menu/Index/"><img src="~/web/images/button-menu.jpg" alt=""></a> </li>
            <li> <a href="/Room/Index/" id="link2">Rooms</a> <a href="/Room/Index/"><img src="~/web/images/button-rooms.jpg" alt=""></a> </li>
            <li> <a href="/Event/Index/"><img src="~/web/images/button-events.jpg" alt=""></a> <a href="/Event/Index/" id="link3">Events</a> </li>
            <li> <a href="/Drink/Index/"><img src="~/web/images/button-drinks.jpg" alt=""></a> <a href="/Drink/Index/" id="link4">Drinks</a> </li>
        </ul>
        <div id="events">
            <h2>Events</h2>
            @foreach (var x in Model)
            {
                <div>
                    <a href="/Event/EventDetay/@x.ID">@x.Baslik</a>
                    
                    <a href="/Event/EventDetay/@x.ID"><img src="@x.BlogImage" alt=""></a>
                    <p>@x.Aciklama</p>
                    <p>@x.Tarih.ToString("dd.MM.yyyy")</p>
                </div>

            }

        </div>
    </div>    
    </body>
</html>

