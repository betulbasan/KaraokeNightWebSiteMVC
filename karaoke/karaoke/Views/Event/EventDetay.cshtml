    <link href="~/web2/css/style.css" rel='stylesheet' type='text/css' />
</head>
<body>
 
    <div class="single">
        <div class="container">
            <div class="col-md-8 single-main">
                <div class="single-grid">
                    @foreach (var x in Model.Deger1)
                    {
                        <img src="@x.BlogImage" alt="" />
                        <h2>@x.Baslik</h2>
                        <p>
                            @x.Aciklama
                        </p>

                    }

                </div>
                @foreach (var y in Model.Deger2)
                {
                    <ul class="comment-list">
                        <li>
                            <img src="~/web2/images/avatar.png" class="img-responsive" alt="">
                            <div class="desc">
                                <p>@y.KullaniciAdi : @y.Yorum</p>
                            </div>
                            <div class="clearfix"></div>
                        </li>
                    </ul>
                }
                @Html.Action("YorumYap","Event")

                
            </div>

            <div class="col-md-4 side-content">
                <a href="/Default/Index/" id="logo"><img src="~/web/images/logo.png" alt=""></a>
                <br />
                <div class="recent">
                    <h3><a href="/Default/Index">KARAOKE NIGHT</a></h3>
                    <ul>
                        <li><a href="/Menu/Index/">Menu</a></li>
                        <li><a href="/Drink/Index/">Drink</a></li>
                        <li><a href="/Room/Index/">Room</a></li>
                        <li><a href="/Event/Index/">Events</a></li>
                        <li><a href="/Photo/Index/">Photo Gallery</a></li>
                    </ul>
                </div>
