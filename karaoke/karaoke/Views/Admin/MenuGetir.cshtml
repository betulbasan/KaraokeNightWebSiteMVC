@model karaoke.Models.Menu
@{
    ViewBag.Title = "MenuGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Update Menu</h2>
<br />
@using (Html.BeginForm("MenuGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Update Menu</button>
}